{
  "name": "mqtt2chrome",
  "version": "4.0.1",
  "description":
    "Displays MQTT messages as Chrome notifications, using MQTT over websockets",
  "icons": {"16": "icon.png", "48": "icon.png", "128": "icon.png"},
  "browser_action": {
    "default_title": "MQTT2Chrome",
    "default_icon": "icon_noconnection.png"
  },
  "permissions": [
    "notifications"
  ],
  "background": { "scripts": [
    "mqttws31.js","background.js"
    ]
    },
  "manifest_version": 2,
  "options_page": "options.html",
  "web_accessible_resources": [
    "icon.png"
  ]
}